{
    "name": "steamworks.js",
    "version": "0.4.0",
    "main": "index.js",
    "types": "index.d.ts",
    "napi": {
        "name": "steamworksjs",
        "triples": {
            "additional": [
                "x86_64-pc-windows-msvc",
                "x86_64-unknown-linux-gnu",
                "x86_64-apple-darwin",
                "aarch64-apple-darwin"
            ]
        }
    },
    "files": [
        "dist/*",
        "index.js",
        "*.d.ts",
        "README.md"
    ],
    "license": "MIT",
    "devDependencies": {
        "@napi-rs/cli": "2.18.4",
        "electron": "24.2.0",
        "rimraf": "6.0.1",
        "typescript": "5.5.3"
    },
    "dependencies": {
        "@types/node": "*"
    },
    "engines": {
        "node": ">= 14"
    },
    "scripts": {
        "build": "npm run types && node build --release",
        "build:debug": "node build",
        "prune": "rimraf dist target client.d.ts",
        "format": "cargo clippy --fix --allow-staged && cargo fmt",
        "types": "tsc index.js --allowJs --declaration --emitDeclarationOnly"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ceifa/steamworks.js"
    }
}
